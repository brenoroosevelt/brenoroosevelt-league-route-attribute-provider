{
    "name": "brenoroosevelt/league-route-attribute-gi",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php8",
        "attributes",
        "router",
        "league",
        "league router"
    ],
    "authors": [
        {
            "name": "Breno Roosevelt",
            "email": "breno.roosevelt@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "jerowork/route-attribute-provider": "^0.3",
        "league/route": "^5.1",
        "psr/container": "^1.0",
        "psr/simple-cache": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "3.5.*",
        "phpstan/phpstan": "^0"
    },
    "provide": {
        "jerowork/route-attribute-provider-implementation": "^0"
    },
    "autoload": {
        "psr-4": {
            "BrenoRoosevelt\\RouteAttributeProvider\\League\\": "src/",
            "BrenoRoosevelt\\RouteAttributeProvider\\League\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "phpunit tests",
            "phpcs -p src tests",
            "phpstan analyse src"
        ],
        "test": [
            "phpunit tests"
        ]
    }
}